<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77e2df"
    tools:context="calcualtor.corsair.com.hellocalculator.MainActivity">
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Smart Calculator"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Set 1st operand"
        android:inputType="numberDecimal"
        android:id="@+id/e1"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Set 2nd operand"
    android:inputType="numberDecimal"
    android:id="@+id/e2"
    android:paddingLeft="10dp"
    android:layout_margin="10dp"
    />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/add"
            />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub"
        android:id="@+id/sub"
        />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Answer will appear here"
        android:inputType="numberDecimal"
        android:id="@+id/e3"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        />


</LinearLayout>
</RelativeLayout>
